root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4
max_line_length = 100

[*.js]
indent_size = 2
max_line_length = 120

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
